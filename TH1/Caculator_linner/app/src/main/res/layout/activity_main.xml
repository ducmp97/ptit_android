<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Họ tên: Pham Minh Đức"
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nhóm: 01"
            android:textSize="20sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Số 1: "></TextView>

        <EditText
            android:id="@+id/edtNumber1"
            android:layout_width="0px"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Số 2: "></TextView>

        <EditText
            android:id="@+id/edtNumber2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:inputType="numberDecimal"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20px"
            android:layout_weight="1"
            android:text="+" />

        <Button
            android:id="@+id/btnSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20px"
            android:layout_weight="1"
            android:text="-" />

        <Button
            android:id="@+id/btnNhan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20px"
            android:layout_weight="1"
            android:text="X" />

        <Button
            android:id="@+id/btnChia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20px"
            android:layout_weight="1"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50pt"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Kết quả"
            android:textSize="50px" />

        <TextView
            android:id="@+id/txtKetQua"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="Ahihi do' ngo^k"
            android:textSize="50px" />
    </LinearLayout>

</LinearLayout>